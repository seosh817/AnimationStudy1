<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--View의 속성을 넣는다. xml 파일에서 속성값을 집어넣을 수 있고
     context.obtainStyledAttributes(attrs, 파일명)을 통해 값들을 불러올 수 있다.-->
    <declare-styleable name="RotationLayout">
        <attr name="degreeX" format="integer"/>
        <attr name="degreeZ" format="integer"/>
        <attr name="speed" format="integer"/>
        <attr name="loop" format="integer"/>
        <attr name="turn" format="integer"/>
        <attr name="target" format="enum">
            <enum name="children" value="0"/>
            <enum name="parent" value="1"/>
        </attr>
        <attr name="direction" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1"/>
        </attr>
        <attr name="autoStart" format="boolean"/>
    </declare-styleable>
</resources>