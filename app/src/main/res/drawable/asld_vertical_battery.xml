<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/selected"
        android:drawable="@drawable/ic_battery_vertical_100"
        android:state_checked="true" />

    <item
        android:id="@+id/unselected"
        android:drawable="@drawable/ic_battery_vertical_0"
        android:state_checked="false" />

    <transition
        android:drawable="@drawable/al_battery_checked"
        android:fromId="@id/unselected"
        android:toId="@id/selected" />

    <transition
        android:drawable="@drawable/al_battery_unchecked"
        android:fromId="@id/selected"
        android:toId="@id/unselected" />

</animated-selector>